<h4>Welcome to your dashboard <%= current_user.name %>!</h4>
</br >
</br >
<div id="wrapper">
<div id="list">
<div id="container" class="transitions-enabled infinite-scroll clearfix">

<% @posts.reverse.each do |post| %>

  <div class="item">
      <div class="pin">
        <p><%= post.user.name %> </p>
        <p><%= link_to(image_tag(post.image.url.to_s), post) %></p>
        <p><%= link_to post.likes.count, post %> <%= link_to "likes", post %> | <%= link_to post.comments.count, post %> <%= link_to "comments", post %></p>
        <p><%= post.desc %></p>
        <p><%= time_ago_in_words post.created_at %> ago</p>
        <p><%= link_to "View", post %>
          <% if post.user_id == current_user.id %>
           | <%= link_to "Edit", edit_post_path(post) %> | <%= link_to "Delete", post, method: :delete, data: { confirm: 'Do you want to delete this post?' } %></p>
          <% end %>
      </div>
  </div>

<% end %>

</div>
</div>
</div>


<script>

$(document).ready(function () {
   
  $container.imagesLoaded(function(){
    $("#item").masonry({
        itemSelector: '.item',
        isAnimated: true,
        columnWidth: function( containerWidth ) {
        
            var width = $(window).width();
            var col = 300;
            

            if(width < 1200 && width >= 980) {
                col = 240;
            }
            else if(width < 980 && width >= 768) {
                col = 186;
            }
        
            return col;
          }
    });
  }); 
});

</script>
